{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "group": "build",
      "command": "C:\\Program Files\\CodeBlocks\\MinGW\\bin\\g++.exe",
      "args": [
        "-g",
        "'${relativeFileDirname}\\${fileBasename}'",
        "-o",
        "'bin\\${fileBasenameNoExtension}.exe'"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "echo": true,
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "Build & run",
      "type": "shell",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "dependsOn": ["Build"],
      "command": ". \"bin\\${fileBasenameNoExtension}.exe\"",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "focus": true,
        "panel": "new",
        "showReuseMessage": false,
        "clear": true
      }
    }
  ]
}
